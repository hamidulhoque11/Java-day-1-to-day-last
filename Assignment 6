/*
 * Digit spelling program using if,else if, else
 * step 1: ask for a digit between 0-9
 * step 2: check the digit and print it by spelling. example if user input is 0 then print Zero
 * step 3: if the digit is not among 0-9 then print Invalid digit
 */
//Assignment 6
import java.util.Scanner;
class assignmentSix {
    public static void main(String[] args) {
        Scanner sc=new Scanner(System.in);
        System.out.print("Enter a value (0-9)  :");
        int digit=sc.nextInt();
        if(digit==0){
            System.out.printf("%d is  Zero",digit);
        }else if(digit==1) {
            System.out.printf("%d is One",digit);
        }else if(digit==2) {
            System.out.printf("%d is Two",digit);
        }else if(digit==3) {
            System.out.printf("%d is Three",digit);
        }else if(digit==4) {
            System.out.printf("%d is Four",digit);
        }else if(digit==5) {
            System.out.printf("%d is Five",digit);
        }else if(digit==6) {
            System.out.printf("%d is Six",digit);
        }else if(digit==7) {
            System.out.printf("%d is Seven",digit);
        }else if(digit==8) {
            System.out.printf("%d is Eight",digit);
        }else if(digit==9) {
            System.out.printf("%d is Nine",digit);
        }else{
            System.out.println("Invalid digit");
        }
    }
}
